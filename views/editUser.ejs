<!-- main screen starts -->
<div class='login-screen' id='main'>
    <div class='container h-100'>

        <div class='row h-100 justify-content-center align-items-center'>
            <form method='POST' action='/dashboard/edit-user/<%=userId%>' class='col-md-6 bg text-light' id='signup'>
                <h2 class="text-center mb-4">UPDATE USER</h2>

                <div class='form-content-login'>
                    <% if (message) { %>
                        <div class="alert alert-danger">
                            <%= message %>
                        </div>
                        <% } %>
                            <div class='mb-3'>
                                <label for='firstname' class='form-label'>FIRST NAME</label>
                                <input type='text' class='form-control transparent-input text-light' id='firstname'
                                    aria-describedby='firstname' placeholder='input your first name' name='firstname'
                                    value='<%= user.user_biodatum.firstname %>' />
                            </div>
                            <div class='mb-3'>
                                <label for='lastname' class='form-label'>LAST NAME</label>
                                <input type='text' class='form-control transparent-input text-light' id='lastname'
                                    aria-describedby='username' placeholder='input your last name' name='lastname'
                                    value='<%= user.user_biodatum.lastname %>' />
                            </div>
                            <div class='mb-3'>
                                <label for='country' class='form-label'>COUNTRY</label>
                                <input type='text' class='form-control transparent-input text-light' id='country'
                                    aria-describedby='country' placeholder='input your country' name='country'
                                    value='<%= user.user_biodatum.country %>' />
                            </div>
                            <div class='mb-3'>
                                <label for='username' class='form-label'>USERNAME</label>
                                <input type='text' class='form-control transparent-input text-light' id='username'
                                    aria-describedby='username' placeholder='input new username' name='username'
                                    value='<%= user.username %>' />
                            </div>
                            <div class='row '>
                                <div class="col-6">
                                    <input class="btn btn-danger w-100" type="button"
                                        onclick='javascript:history.back();return false;' value="CANCEL" />
                                </div>
                                <div class="col-6">
                                    <button type='submit' class='w-100 btn btn--custom'>
                                        SAVE
                                    </button>
                                </div>
                            </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- screen ends -->